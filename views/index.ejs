<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>CHATS &hearts;</h3>
    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br>
    <% for(let chat of chats){ %>
        <div class="chat">
            <p>From: <i><%= chat.from %></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form action="/chats/<%=chat.id%>/edit" method="GET">
                    <button style="background-color: aliceblue; padding: 6px; border-radius: 9px; margin-right: 8px;">EDIT</button><br>
                </form>
                <form action="/chats/<%=chat.id%>?_method=DELETE" method="POST">
                    <button style="background-color: aliceblue; padding: 6px; border-radius: 9px; margin-right: 8px;">DELETE</button>
                </form>
            </div>
            <p>Received by: <i><%= chat.to %></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
        </div>
        <br><br><br>
    <%}%>
</body>
</html>